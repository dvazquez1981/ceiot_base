<!DOCTYPE html>
<html lang="en">
<head>
<link rel="stylesheet" href="/css/styles.css">
  <meta charset="UTF-8">

  <title>Dispositivos</title>
  
</head>
<body>
  <h1>CRUD de Devices</h1>
  <% if (msg) { %>
    <div class="alert-success"><%= msg %></div>
  <% } %>

  <!-- Crear nuevo device -->
  <h2>Crear Device</h2>
  <form action="/html/device/" method="POST">
    <input type="text" name="id" placeholder="ID" required />
    <input type="text" name="n" placeholder="Nombre" required />
    <input type="text" name="k" placeholder="Clave" required />
    <button type="submit">Crear</button>
  </form>

  <!-- Listado de devices -->
  <h2>Lista de Devices</h2>
  <table border="1">
    <tr>
      <th>ID</th>
      <th>Nombre</th>
      <th>Clave</th>
      <th>Acciones</th>
    </tr>
    <% devices.forEach(function(device) { %>
      <tr>
        <td><%= device.device_id %></td>
        <td><%= device.name %></td>
        <td><%= device.key %></td>
        <td>
          <!-- Eliminar -->
          <form action="/html/device/<%= device.device_id %>?_method=DELETE" method="POST" style="display:inline;">
            <button type="submit">Eliminar</button>
          </form>

          <!-- Editar -->
          <form action="/html/device/<%= device.device_id %>?_method=PATCH" method="POST" style="display:inline;">
            <input type="text" name="n" placeholder="Nuevo nombre" />
            <input type="text" name="k" placeholder="Nueva clave" />
            <button type="submit">Actualizar</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </table>
</body>
</html>
